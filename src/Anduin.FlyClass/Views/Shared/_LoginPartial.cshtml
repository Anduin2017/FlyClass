@using Anduin.FlyClass.Entities
@inject SignInManager<Teacher> SignInManager
@inject UserManager<Teacher> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav mr-auto">
            <li class="nav-item mr-3">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">你好， @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item mr-3">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">登出</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav mr-auto">
        <li class="nav-item mr-3">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">
                <i class="fa-solid fa-user-plus"></i>
                注册
            </a>
        </li>
        <li class="nav-item mr-3">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                <i class="fa-solid fa-user-pen"></i>
                登入
            </a>
        </li>
    </ul>
}
