@model Anduin.FlyClass.Models.ManageViewModels.IndexViewModel
@{
    ViewData["Title"] = "管理账户";
}

<h2>@ViewData["Title"].</h2>

<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>修改账户设置</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>密码:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">修改</a>
            }
            else
            {
                <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">创建</a>
            }
        </dd>
    </dl>
</div>
